<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="nacento_media_gallery_meta" resource="default" engine="innodb" comment="Per-image metadata (Nacento)">
        <column xsi:type="int" name="record_id" unsigned="true" nullable="false" comment="FK to catalog_product_entity_media_gallery_value.record_id"/>
        <column xsi:type="varchar" name="s3_etag" length="255" nullable="true" comment="S3/R2 ETag"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="record_id"/>
        </constraint>

        <constraint xsi:type="foreign"
                    referenceId="NACENTO_MEDIA_META_RECORD_ID_FK"
                    table="nacento_media_gallery_meta" column="record_id"
                    referenceTable="catalog_product_entity_media_gallery_value" referenceColumn="record_id"
                    onDelete="CASCADE"/>
    </table>
</schema>
